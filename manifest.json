{
  "manifest_version": 3,
  "name": "FIKEXT",
  "version": "0.1.0",
  "description": "Fikers Sigma",
  "icons": {
    "16": "assets/fikext-icons/logo-128.png",
    "32": "assets/fikext-icons/logo-128.png",
    "48": "assets/fikext-icons/logo-128.png",
    "128": "assets/fikext-icons/logo-128.png"
  },
  "action": {
    "default_icon": {
      "16": "assets/fikext-icons/logo-128.png",
      "32": "assets/fikext-icons/logo-128.png"
    }
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://csfloat.com/search*"],
      "js": ["content/floatdb/item/const.js", "content/floatdb/item/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://csfloat.com/*"],
      "js": [
        "content/floatdb/shared/page.js",
        "content/floatdb/shared/storage.js",
        "content/floatdb/trades/const.js",
        "content/floatdb/trades/index.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://steamcommunity.com/profiles/*/inventory*",
        "https://steamcommunity.com/id/*/inventory*"
      ],
      "js": [
        "content/floatdb/shared/storage.js",
        "content/steam/const.js",
        "content/steam/inventory.js"
      ],
      "run_at": "document_idle"
    }
  ]
}

